@using Blazored.Modal;
@inject NavigationManager navigationManager

<div class="flex flex-col items-center gap-y-[10px]">
    <h3 class="text-5xl">👋🏻</h3>
    <h3 class="text-2xl font-semibold">Willkommen!</h3>
    <h5 class="text-center">Es freut mich sehr, dass du deine Projektanalyse online erfassen möchtest! Rechne mit ca. 10 Minuten Zeitaufwand. Bitte gebe den Namen deines Projekts an.</h5>
    <div class="grid justify-content-center">
        <div class="flex flex-col">
            <label class="font-semibold">Projektname:</label>
            <input class="p-1 text-md outline outline-1 outline-black rounded-md" type="text" @bind="ProjectName" @bind:event="oninput"/>
        </div>
    </div>
    <div class="flex flex-row w-4/5 justify-between mt-[15px] items-stretch gap-x-[20px]">
        <button @onclick="() => CloseModalCallback()" class="flex-1 text-md p-2 rounded-md bg-gray-200 hover:bg-gray-300">
            Abbruch
        </button>
        <button @onclick='() => navigationManager.NavigateTo($"/CreateProjectAnalysis/{ProjectName}")' class="flex-1 text-md p-2 text-white rounded-md bg-green-500 hover:bg-green-600">
            Starten
        </button>
    </div>
</div>

@code {
    private string ProjectName;

    [Parameter]
    public IModalReference ModalReference { get; set; }

    [Parameter]
    public Action CloseModalCallback { get; set; }
}

